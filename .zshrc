function glc {
  git branch --sort=-committerdate | head -10 | nl
  read "num?enter branch num to checkout to: "
  branch=$(git for-each-ref --count="$num" --sort=-committerdate refs/heads/ --format='%(refname:short)' | tail -1)
  git checkout $branch
}

